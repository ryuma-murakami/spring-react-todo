<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.backend.repository.TaskMapper">
	<resultMap id="TaskResultMap"
		type="com.example.backend.entity.Task">
		<id property="id" column="id" />
		<result property="title" column="title" />
		<result property="status" column="status" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
	</resultMap>
	<select id="selectActiveTasks" resultMap="TaskResultMap">
		SELECT * FROM
		tasks
		WHERE status != #{status}
		ORDER BY created_at DESC
	</select>
	<select id="selectTrashedTasks" resultMap="TaskResultMap">
		SELECT * FROM
		tasks
		WHERE status = #{status}
		ORDER BY created_at DESC
	</select>
	<insert id="insertTask">
		INSERT INTO tasks (id,
		title,status,created_at,updated_at)
		VALUES
		(#{id},#{title},#{status},#{createdAt},#{updatedAt})
	</insert>
	<update id="updateTask">
		UPDATE tasks SET title = #{title}, status =
		#{status}, updated_at =
		#{updatedAt}
		WHERE id = #{id}
	</update>
	<delete id="deleteAllTrashedTasks">
		DELETE FROM tasks WHERE status = #{status}
	</delete>
	<delete id="deleteTask">
		DELETE FROM tasks WHERE id = #{id}
	</delete>
</mapper>
